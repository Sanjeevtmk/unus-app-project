<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.madproject.fees">

    <Button
        android:id="@+id/exam_fee"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="215dp"
        android:layout_height="72dp"
        android:layout_marginBottom="396dp"
        android:background="@drawable/customised_button"
        android:hapticFeedbackEnabled="false"
        android:soundEffectsEnabled="true"
        android:text="semester fee"
        android:textColor="#000000"
        android:textStyle="bold"
        app:backgroundTint="#4949FF"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/semester_fee"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="215dp"
        android:layout_height="72dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/customised_button"
        android:hapticFeedbackEnabled="false"
        android:soundEffectsEnabled="true"
        android:text="examination fee"
        android:textColor="#000000"
        android:textStyle="bold"
        app:backgroundTint="#4949FF"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/exam_fee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14" />

</androidx.constraintlayout.widget.ConstraintLayout>